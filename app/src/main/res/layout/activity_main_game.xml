<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="summerland.twilight.tamadoggy.MainGameActivity">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:backgroundTint="@android:color/holo_orange_light"
                    android:fontFamily="@font/baloo_chettan"
                    android:text="Main Menu"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
                <TextView
                    android:text="Cash: $100"
                    android:fontFamily="@font/baloo_chettan"
                    android:layout_weight="2"
                    android:gravity="right"
                    />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:text="Overall"
                android:fontFamily="@font/baloo_chettan"
                android:layout_weight="0"
                android:gravity="left"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                />
            <ProgressBar
                android:id="@+id/barOverall"
                android:layout_margin="5sp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:color="white"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/colorAccent"
                />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:text="Hunger"
                android:fontFamily="@font/baloo_chettan"
                android:layout_weight="0"
                android:gravity="left"
                />
            <ProgressBar
                android:id="@+id/barHunger"
                android:layout_margin="5sp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:color="white"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/colorPrimary"
                />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:text="Fun"
                android:fontFamily="@font/baloo_chettan"
                android:layout_weight="0"
                android:gravity="left"
                />
            <ProgressBar
                android:id="@+id/barFun"
                android:layout_margin="5sp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:color="white"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/colorPrimary"
                />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:text="Fitness"
                android:fontFamily="@font/baloo_chettan"
                android:layout_weight="0"
                android:gravity="left"
                />
            <ProgressBar
                android:id="@+id/barFitness"
                android:layout_margin="5sp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:color="white"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/colorPrimary"
                />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:text="Hygiene"
                android:fontFamily="@font/baloo_chettan"
                android:layout_weight="0"
                android:gravity="left"
                />
            <ProgressBar
                android:id="@+id/barHygiene"
                android:layout_margin="5sp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:color="white"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/colorPrimary"
                />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:text="Energy"
                android:fontFamily="@font/baloo_chettan"
                android:layout_weight="0"
                android:gravity="left"
                />
            <ProgressBar
                android:id="@+id/barEnergy"
                android:layout_margin="5sp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:color="white"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/colorPrimary"
                />
        </TableRow>
    </TableLayout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Content Container -->

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:itemTextColor="@android:color/white"
            app:itemBackground="@color/colorPrimary"
            app:menu="@menu/my_navigation_items"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
