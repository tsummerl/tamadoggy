<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppFont">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/baloo_chettan</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppHeader">
        <item name="android:textSize">36dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/baloo_chettan</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppBasicBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">@color/colorLightGray</item>
        <item name="android:progressTint">@color/colorPrimary</item>
    </style>

    <style name="AppButtonStyle">
        <item name="android:backgroundTint">@android:color/holo_orange_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/baloo_chettan</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
